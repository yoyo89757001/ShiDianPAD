<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:zhy="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:visibility="visible"
        android:id="@+id/shiping_rl"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <SurfaceView
            android:layout_width="match_parent"
            android:id="@+id/fff"
            android:layout_centerInParent="true"
            android:layout_height="match_parent" />

        <ImageView
            android:id="@+id/image"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="16dp"
            android:layout_marginTop="16dp"
            android:scaleType="fitXY"
            android:layout_alignParentRight="true"
            android:layout_width="160dp"
            android:layout_height="160dp" />

        <TextView
            android:textSize="18sp"
            android:textColor="@color/white"
            android:id="@+id/tishi"
            android:layout_below="@+id/image"
            android:visibility="gone"
            android:layout_alignParentRight="true"
            android:background="@color/black"
            android:layout_marginTop="8dp"
            android:layout_marginRight="10dp"
            android:padding="6dp"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_marginBottom="30dp"
            android:layout_height="wrap_content">

            <Button
                android:layout_width="100dp"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:text="拍照"
                android:id="@+id/paizhao1"
                android:background="@drawable/jiaohu"
                android:layout_height="50dp" />


            <Button
                android:layout_width="100dp"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:text="保存"
                android:layout_marginLeft="30dp"
                android:visibility="gone"
                android:id="@+id/queding"
                android:background="@drawable/jiaohu"
                android:layout_height="50dp" />

        </LinearLayout>

    </RelativeLayout>



    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/jiemian"
        android:background="@drawable/beijin"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <ImageView
                android:layout_width="50dp"
                android:padding="10dp"
                android:layout_centerVertical="true"
                android:id="@+id/dd"
                android:layout_marginLeft="16dp"
                android:src="@drawable/fanhui"
                android:layout_height="50dp" />

            <TextView
                android:text="返回"
                android:textSize="14sp"
                android:layout_toRightOf="@+id/dd"
                android:layout_centerVertical="true"
                android:textColor="@color/write"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:layout_width="140dp"
                android:id="@+id/dd22"
                android:layout_height="60dp"
                android:layout_marginRight="6dp"
                android:scaleType="fitXY"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@+id/linearLayout2" />

            <LinearLayout
                android:layout_gravity="center"
                android:orientation="vertical"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/linearLayout2">

                <TextView
                    android:text="人证合一智能识别系统"
                    android:layout_marginLeft="6dp"
                    android:textSize="22sp"
                    android:textColor="@color/write"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:text="INTELLIGENT IDENTIFICAION SYSTEM"
                    android:layout_marginLeft="6dp"
                    android:textSize="18sp"
                    android:textColor="@color/write"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.4"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:text="姓名:"
                        android:textColor="@color/write"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/name"
                        android:focusable="false"
                        android:layout_width="150dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/zidonghuoqu10"
                        android:paddingLeft="6dp"
                        android:textColor="@color/blake" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="身份证:"
                        android:textColor="@color/write"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/shenfenzheng"
                        android:layout_width="350dp"
                        android:layout_height="40dp"
                        android:focusable="false"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/zidonghuoqu10"
                        android:paddingLeft="6dp"
                        android:textColor="@color/blake" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="性别:"
                        android:textColor="@color/write"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/xingbie"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:focusable="false"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/zidonghuoqu10"
                        android:paddingLeft="6dp"
                        android:textColor="@color/blake" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:text="民族:"
                        android:textColor="@color/write"
                        android:textSize="14sp"/>

                    <EditText
                        android:id="@+id/mingzu"
                        android:layout_width="80dp"
                        android:focusable="false"
                        android:paddingLeft="6dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/zidonghuoqu10"
                        android:textColor="@color/blake" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="出生:"
                        android:textColor="@color/write"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/chusheng"
                        android:layout_width="250dp"
                        android:focusable="false"
                        android:layout_height="40dp"
                        android:paddingLeft="6dp"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/zidonghuoqu10"
                        android:textColor="@color/blake" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="电话:"
                        android:textColor="@color/write"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/dianhua"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:paddingLeft="6dp"
                        android:maxLength="11"
                        android:inputType="phone"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/zidonghuoqu10"
                        android:textColor="@color/blake" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:text="发证\n机关:"
                        android:textColor="@color/write"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/jiguan"
                        android:layout_width="280dp"
                        android:layout_height="40dp"
                        android:focusable="false"
                        android:paddingLeft="6dp"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/zidonghuoqu10"
                        android:textColor="@color/blake" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="有效\n期限:"
                        android:textColor="@color/write"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/qixian"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:focusable="false"
                        android:paddingLeft="6dp"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/zidonghuoqu10"
                        android:textColor="@color/blake" />


                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.2sp"
                    android:layout_marginLeft="16dp"
                    android:background="@color/write" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:text="住址:"
                        android:textColor="@color/write"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/dizhi"
                        android:focusable="false"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginLeft="10dp"
                        android:paddingLeft="6dp"
                        android:background="@drawable/zidonghuoqu10"
                        android:textColor="@color/blake" />

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_marginTop="32dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/zhengjian"
                            android:layout_width="160dp"
                            android:scaleType="fitXY"
                            android:layout_height="190dp"
                            android:background="@drawable/zidonghuoqu5" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="证件照"
                            android:textColor="@color/write"
                            android:textSize="18sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/paizhao"
                            android:layout_width="240dp"
                            android:scaleType="fitXY"
                            android:layout_height="190dp"
                            android:background="@drawable/zidonghuoqu5" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="现场照"
                            android:textColor="@color/write"
                            android:textSize="18sp" />
                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginLeft="50dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="bottom"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="比对结果:"
                            android:textColor="@color/write"
                            android:textSize="18sp" />

                        <EditText
                            android:id="@+id/jieguo"
                            android:layout_width="200dp"
                            android:focusable="false"
                            android:paddingLeft="6dp"
                            android:layout_height="40dp"
                            android:layout_marginLeft="10dp"
                            android:background="@drawable/zidonghuoqu10"
                            android:textColor="@color/blake" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginBottom="36dp"
                        android:layout_weight="0.8"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="相 似 度 :"
                            android:textColor="@color/write"
                            android:textSize="18sp" />

                        <EditText
                            android:id="@+id/xiangsidu"
                            android:layout_width="200dp"
                            android:layout_height="40dp"
                            android:focusable="false"
                            android:paddingLeft="6dp"
                            android:layout_marginLeft="14dp"
                            android:background="@drawable/zidonghuoqu10"
                            android:textColor="@color/blake" />

                    </LinearLayout>


                </LinearLayout>


            </LinearLayout>


        </LinearLayout>



        <LinearLayout
            android:layout_weight="1.2"
            android:gravity="center|top"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <Button
                android:text="保  存"
                android:textSize="16sp"
                android:id="@+id/wancheng"
                android:layout_marginRight="20dp"
                android:textColor="@color/write"
                android:background="@drawable/jiaohu"
                android:layout_width="160dp"
                android:layout_height="60dp" />



        </LinearLayout>

    </LinearLayout>

</RelativeLayout>