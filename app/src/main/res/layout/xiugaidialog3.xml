<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:id="@+id/www"
        android:layout_width="300dp"
        android:layout_height="290dp">

        <TextView
            android:id="@+id/title2"
            android:text="修改设备信息\n(请勿随意修改)"
            android:textSize="18sp"
            android:layout_weight="0.8"
            android:gravity="center"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="0dp" />

        <View
            android:background="@color/colorBar_bg"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
        android:text="名称:"
        android:textColor="@color/blake"
        android:textSize="14sp"
        android:layout_marginLeft="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:textColor="@color/textcolor"
        android:textSize="14sp"
        android:text="市电"
        android:paddingLeft="16dp"
        android:background="@null"
        android:gravity="center_vertical"
        android:id="@+id/idid"
        android:layout_width="match_parent"
        android:layout_height="50dp" />
</LinearLayout>

        <View
            android:background="@color/colorBar_bg"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:text="摄像头IP:"
                android:textColor="@color/blake"
                android:textSize="14sp" />

            <EditText
                android:textColor="@color/textcolor"
                android:textSize="14sp"
                android:text="192.168.2.2"
                android:paddingLeft="16dp"
                android:background="@null"
                android:gravity="center_vertical"
                android:id="@+id/shexiangtou"
                android:layout_width="match_parent"
                android:layout_height="50dp" />
        </LinearLayout>

        <View
            android:background="@color/colorBar_bg"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="主机地址:"
                android:layout_marginLeft="16dp"
                android:textColor="@color/blake"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <EditText
                android:textColor="@color/textcolor"
                android:textSize="14sp"
                android:text="http://183.63.123.53:8090"
                android:paddingLeft="16dp"
                android:background="@null"
                android:gravity="center_vertical"
                android:id="@+id/zhuji"
                android:layout_width="match_parent"
                android:layout_height="50dp" />
        </LinearLayout>

        <View
            android:background="@color/colorBar_bg"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_weight="0.5"
            android:layout_width="match_parent"
            android:layout_height="0dp">

            <Button
                android:layout_width="0dp"
                android:textColor="@color/colorBar_bg"
                android:layout_weight="1"
                android:text="确认"
                android:id="@+id/queren"
                android:textSize="16sp"
                android:background="@null"
                android:layout_height="50dp" />

            <View
                android:layout_width="0.6dp"
                android:background="@color/tabtextcolo"
                android:layout_height="match_parent"/>
            <Button
                android:layout_width="0dp"
                android:background="@null"
                android:layout_weight="1"
                android:textSize="16sp"
                android:id="@+id/quxiao"
                android:text="取消"
                android:textColor="@color/colorBar_bg"
                android:layout_height="50dp" />

        </LinearLayout>



      </LinearLayout>
</LinearLayout>